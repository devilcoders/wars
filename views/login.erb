<% if @errors %>
  <%= debug @errors %>
<% end %>
<form action='<%= url_for '/login' %>' method='post'>
  <p>
    <label for="name">Name</label>
    <input type="text" name="name" value="<%= @player.try(:name) %>" id="name" />
  </p>
  <p>
    <label for="password">Password</label>
    <input type="password" name="password" value="" id="password">    
  </p>
  <p>
    <input type='checkbox' name='new_user'> New User?
  </p>
  <p>
    <input type="submit" value="Play &rarr;">
  </p>
</form>